{
    "manifest_version": 2,

    "name": "OALD Search (Kotlin)",
    "description": "Extension for translating with Oxford Learner's Dictionaries",
    "version": "1.0",

    "permissions": [
        "contextMenus",
        "http://www.oxfordlearnersdictionaries.com/*"
    ],

    "icons": {
        "16": "icons/icons8_lightbox/student-16.png",
        "48": "icons/icons8_lightbox/student-48.png",
        "128": "icons/icons8_lightbox/student-128.png"
    },

    "background": {
        "scripts": ["js/kotlin.js", "js/OALDSearchExtension.js"]
    }
}